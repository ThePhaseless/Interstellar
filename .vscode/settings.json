{
  "files.associations": {
    "Config/Home/HomeAssistant/*.yaml": "home-assistant",
    "Ansible/**/*.yaml": "ansible"
  },
  "yaml.schemas": {
    "kubernetes": "Kubernetes/**/loki.yaml"
  },
  "python.terminal.activateEnvInCurrentTerminal": true,
  "python.terminal.activateEnvironment": true,
  "cSpell.words": [
    "crowdsec",
    "jellyfin",
    "kompose",
    "loadbalancer",
    "nerine",
    "objectstorage",
    "OCID",
    "opencl",
    "qbittorrent",
    "scanservjs",
    "tflint",
    "traefik"
  ],
  "cSpell.ignoreRegExpList": [".*arr"],
  "yaml.customTags": ["!env_var", "!include_dir_merge_named"],
  "python.defaultInterpreterPath": "./.venv/bin/python",
  "ansible.lightspeed.enabled": false,
  "ansible.python.interpreterPath": "${workspaceFolder}/.venv/bin/python",
  "vs-kubernetes": {
    "disable-linters": ["resource-limits"]
  },
  "chat.tools.terminal.autoApprove": {
    "./scripts/lint-kubernetes.sh": true
  },
  "opentofu.experimentalFeatures.validateOnSave": true,
  "opentofu.experimentalFeatures.prefillRequiredFields": true,
  "json.schemaDownload.trustedDomains": {
    "https://schemastore.azurewebsites.net/": true,
    "https://raw.githubusercontent.com/": true,
    "https://www.schemastore.org/": true,
    "https://json.schemastore.org/": true,
    "https://json-schema.org/": true,
    "https://docs.renovatebot.com/renovate-schema.json": true
  }
}
